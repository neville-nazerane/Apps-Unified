<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Comp="clr-namespace:Testing.Apps.Components"
             x:Class="Testing.Apps.Pages.BlogsPage">
    <ContentPage.Content>

        <ScrollView Orientation="Vertical">
            <StackLayout>

                <Comp:BlogList />

                <Comp:BlogEditor />

                <Button x:Name="submit" 
                        Text="Add or update" />

            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>